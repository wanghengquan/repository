##<lib_start>
##<step1>construct a work lib
if $gui_cmd = 'cmd'
    vlib work
else
    design create work .
    design open work
    adel -all
    cd ../../
endif
##<step2>connect some other lib
vmap %(lib_name)s $dev_lib
vmap pmi_work  %(diamond)s/active-hdl/vlib/pmi_work/pmi_work.lib
