##prepare for simulation
##<pre_start>
radix -hex
##<pre_end>

##start to run simulation
##<sim_start>
vsim -novopt +access +r -asdb %(sim_top)s.asdb -lib work %(sim_top)s -L %(lib_name)s -PL pmi_work -L pcsd_work
if $gui_cmd = 'cmd'
    run %(sim_time)s
    quit
else
    run %(sim_time)s
endif
